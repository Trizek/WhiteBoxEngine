////////////////////////////////////////////////////////////////////////////////
// Filename: color.ps
////////////////////////////////////////////////////////////////////////////////
#version 400


/////////////////////
// INPUT VARIABLES //
/////////////////////
smooth in vec3 outColor;
smooth in vec2 texCoord;
smooth in vec3 outNormal;


//////////////////////
// OUTPUT VARIABLES //
//////////////////////
out vec4 outputColor;

uniform sampler2D 	shaderTexture;


////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
void main(void)
{
	outputColor = texture(shaderTexture, texCoord);
}
